<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SettingsLecture"
             x:Class="SettingsLecture.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="Back1">#000000</Color>
            <Color x:Key="Back2">#0000ff</Color>
            <Color x:Key="Back3">#00ff00</Color>
            <Color x:Key="AppBack">#000000</Color><!--this is the default value-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
