<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PitchCounter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PitchCounter"
    xmlns:views="clr-namespace:PitchCounter.Views"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Data"
            ContentTemplate="{DataTemplate views:Data}"
            Route="Data"
            Icon="database.png"/>
        <ShellContent Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="home.png"/>
        <ShellContent Title="Player"
            ContentTemplate="{DataTemplate views:Player}"
            Route="Player"
            Icon="player.png"/>
        <ShellContent Title="Settings"
            ContentTemplate="{DataTemplate views:Settings}"
            Route="Settings"
            Icon="settings.png"/>
    </FlyoutItem>

</Shell>
